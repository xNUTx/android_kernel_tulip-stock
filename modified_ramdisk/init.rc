# PERI-FG-TOUCH_GLOVE_MODE-00+[
service tp-gm /system/bin/GM
    class main
    user root
    group root
    oneshot

on property:persist.sys.touch.glove_mode=0
    write /sys/devices/soc.0/78b9000.i2c/i2c-5/5-0024/main_ttsp_core.cyttsp4_i2c_adapter/glove 0
