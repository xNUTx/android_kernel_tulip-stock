on property:sys.psensor.skip_event=1
    write /sys/class/capella_sensors/proximity/ps_skip_event 1

service mdnsd /system/bin/mdnsd
    class main
    user mdnsr
    group inet net_raw
    socket mdnsd stream 0660 mdnsr inet
    disabled
    oneshot

service pre-recovery /system/bin/uncrypt
    class main
    disabled
    oneshot

# Native helper for SuperStamina
service xssm /system/bin/xssm
class main
user root
group root system shell
socket xssm stream 0660 root system
socket prmd stream 0666 root system
socket xssm_wakelock_socket stream 0660 root system

on fs
    ONLY_IN_DEBUG(chmod 755 /fsckstore.sh)

on post-fs
    # !!! Note: Do not re-mount_all fstab.qcom after me, or else /mnt/idd privilege is overriden!!!
    # change the idd partition privilege mounted on /mnt/idd
    chown idd idd /mnt/idd
    chmod 0751 /mnt/idd

    ONLY_IN_VARIANT(user, exec /system/bin/rm -r /mnt/idd/lost+found)
    mkdir /mnt/idd/lost+found 0770 root root

on early-fs
    ONLY_IN_DEBUG(symlink /dev/.fsck_log /dev/.fsck)

on post-fs-data
    ONLY_IN_VARIANT(user, exec /system/bin/rm -r /mnt/idd/lost+found)
    ONLY_IN_VARIANT(userdebug, exec /system/bin/rm -r /mnt/idd/lost+found)
    mkdir /mnt/idd/lost+found 0770 root root
    ONLY_IN_DEBUG(mkdir /mnt/idd/fsck 0777 root root)
    restorecon_recursive /mnt/idd

on boot
    ONLY_IN_DEBUG(setprop fsck.newfs 1)

# Start idd native service
# inet should be tested
service iddd /system/bin/iddd
    class main
    user idd
    group idd log inet

service startup-prober /system/bin/startup-prober
    user root
    oneshot
    disabled

on property:dev.bootcomplete=1
    start startup-prober

ONLY_IN_DEBUG(
on property:vold.decrypt=trigger_restart_framework
   setprop fsck.newfs 1
)

ONLY_IN_DEBUG(
on property:fsck.newfs=1
    exec /system/bin/sh /fsckstore.sh /dev/.fsck_log /mnt/idd/fsck
    setprop fsck.newfs 0
)

#Start crashmonitor native service
ONLY_IN_DEBUG(
service crashmonitorns /system/bin/crashmonitorns
    class main
    user root
)

# Configure coredumps
    ONLY_IN_DEBUG(setrlimit 4 -1 -1)
    ONLY_IN_DEBUG(exec /system/bin/corecatcher -d /sdcard/dumpfiles:/sdcard1/dumpfiles:/usbdisk/dumpfiles -s 30)
